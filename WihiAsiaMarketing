const sendEmailBtns = document.querySelectorAll('.team-card .glass-effect');
const applyNowBtns = document.querySelectorAll('#careers .btn-primary');
if(startJourneyBtn) {
startJourneyBtn.addEventListener('click', () => {
const modal = document.createElement('div');
modal.className = 'modal fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4';
modal.innerHTML = `
<div class="glass-effect !rounded-xl max-w-md w-full p-8">
<div class="flex justify-between items-center mb-6">
<h3 class="text-2xl font-bold text-white">Start Your Journey</h3>
<button class="modal-close w-8 h-8 flex items-center justify-center glass-effect !rounded-full hover:bg-primary/20">
<i class="ri-close-line"></i>
</button>
</div>
<form class="space-y-4">
<input type="text" placeholder="Your Name" required class="w-full px-4 py-3 bg-white/5 border border-white/10 !rounded-button text-white placeholder-gray-400 focus:outline-none focus:border-primary">
<input type="email" placeholder="Your Email" required class="w-full px-4 py-3 bg-white/5 border border-white/10 !rounded-button text-white placeholder-gray-400 focus:outline-none focus:border-primary">
<select required class="w-full px-4 py-3 bg-white/5 border border-white/10 !rounded-button text-white focus:outline-none focus:border-primary">
<option value="">Select Service</option>
<option value="facebook">Facebook Commerce</option>
<option value="tiktok">TikTok Shop</option>
<option value="lazada">Lazada Store</option>
<option value="shopee">Shopee Solutions</option>
</select>
<button type="submit" class="w-full btn-primary !rounded-button py-3 text-white font-semibold">Get Started</button>
</form>
</div>
`;
document.body.appendChild(modal);
modal.style.display = 'flex';
const closeBtn = modal.querySelector('.modal-close');
const form = modal.querySelector('form');
closeBtn.addEventListener('click', () => document.body.removeChild(modal));
modal.addEventListener('click', (e) => {
if (e.target === modal) document.body.removeChild(modal);
});
form.addEventListener('submit', (e) => {
e.preventDefault();
const formData = new FormData(form);
console.log('Starting journey with:', Object.fromEntries(formData));
document.body.removeChild(modal);
});
});
if(viewPortfolioBtn) {
viewPortfolioBtn.addEventListener('click', () => {
document.getElementById('portfolio').scrollIntoView({ behavior: 'smooth' });
});
getStartedBtns.forEach(btn => {
btn.addEventListener('click', () => {
const service = btn.closest('.service-modal').getAttribute('data-service');
window.location.href = `#contact?service=${service}`;
});
});
learnMoreBtns.forEach(btn => {
btn.addEventListener('click', () => {
const service = btn.closest('.service-modal').getAttribute('data-service');
window.location.href = `#services?details=${service}`;
});
});
scheduleMeetingBtns.forEach(btn => {
btn.addEventListener('click', () => {
const teamMember = btn.closest('.team-card').getAttribute('data-member');
const modal = document.createElement('div');
modal.className = 'modal fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4';
